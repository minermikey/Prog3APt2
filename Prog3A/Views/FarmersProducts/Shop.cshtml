@model IEnumerable<Prog3A.Models.FarmersProducts>

@{
    ViewData["Title"] = "Farmers Market Shop";
}

<h2 class="text-center my-4">ðŸ›’ Farmers Market Shop</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            var imageUrl = !string.IsNullOrEmpty(product.ImageUrl)
            ? Url.Content(product.ImageUrl)
            : Url.Content("~/images/no-image.png");

            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@imageUrl" class="card-img-top" alt="@product.Name"
                        style="object-fit: cover; height: 200px;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="card-text fw-bold text-success mb-1">R @product.Price</p>
                        <p class="card-text"><small class="text-secondary">Category: @product.Category</small></p>
                        <div class="mt-auto">
                            <button class="btn btn-primary w-100">Add to Cart</button>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <small class="text-muted">Posted on: @product.CreatedAt.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
