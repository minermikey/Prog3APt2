@model IEnumerable<Prog3A.Models.FarmersProducts>

@{
    ViewData["Title"] = "Product List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Farmer ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image URL</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FarmerId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("R")</td>
                <td>@item.Category</td>
                <td><a href="@item.ImageUrl" target="_blank">Image</a></td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
